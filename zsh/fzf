array_join() {
    if [[ $# -gt 0 ]]; then
        for arg in "$@"; do
            printf "'%s' " "${arg}"
        done
    fi
}

# --- setup fzf theme ---
fg="#ffbdd5"
bg="#11111b"
bg_highlight="#7d7763"
purple="#ed79a3"
blue="#46baed"
cyan="#79d0ed"

export FZF_DEFAULT_OPTS="--ansi --preview-window='right:50%' --color=fg:${fg},bg:${bg},hl:${purple},fg+:${fg},bg+:${bg_highlight},hl+:${purple},info:${blue},prompt:${cyan},pointer:${cyan},marker:${cyan},spinner:${cyan},header:${cyan}"

# -- Use fd instead of find --
export FZF_DEFAULT_COMMAND="fd --hidden --strip-cwd-prefix --exclude .git"
export FZF_CTRL_T_COMMAND="$FZF_DEFAULT_COMMAND"
export FZF_ALT_C_COMMAND="fd --type=d --hidden --strip-cwd-prefix --exclude .git"

RG_PREFIX=(rg
  --column
  --hidden
  --line-number
  --no-heading
  --color=always
  --colors 'match:fg:green'
  --colors 'path:fg:white'
  --colors 'path:style:nobold'
  --smart-case
  --glob "'!**/.git/'"
)

RG_PREFIX+=(" 2> /dev/null")

RG_PREVIEW_CMD='bat --decorations=always --color=always {1} --highlight-line {2} --style=header,grid'
RG_PREVIEW_WINDOW_CONFIG='right:border-left:50%:+{2}+3/3:~3'
RG_PREVIEW_STR=(--preview "$RG_PREVIEW_CMD" --preview-window "$RG_PREVIEW_WINDOW_CONFIG")

RG_QUERY_PARSING="\$(echo {q} | sed 's/ /.*/g')"
RG_QUERY="$(echo $QUERY | sed 's/ /.*/g')"

RG_PREFIX_STR=$(array_join "${RG_PREFIX+"${RG_PREFIX[@]}"}")
RG_PREFIX_STR="${RG_PREFIX+"${RG_PREFIX[@]}"}"
RG_FZF_CMD="${RG_PREFIX+"${RG_PREFIX[@]}"} '$QUERY' ."

# Use fd (https://github.com/sharkdp/fd) for listing path candidates.
# - The first argument to the function ($1) is the base path to start traversal
# - See the source code (completion.{bash,zsh}) for the details.
_fzf_compgen_path() {
  fd --hidden --exclude .git . "$1"
}

# Use fd to generate the list for directory completion
_fzf_compgen_dir() {
  fd --type=d --hidden --exclude .git . "$1"
}

source ~/fzf-git.sh/fzf-git.sh

show_file_or_dir_preview="if [ -d {} ]; then eza --tree --color=always {} | head -200; else bat -n --color=always --line-range :500 {}; fi"

export FZF_CTRL_T_OPTS="--preview '$show_file_or_dir_preview'"
export FZF_ALT_C_OPTS="--preview 'eza --tree --color=always {} | head -200'"

# Advanced customization of fzf options via _fzf_comprun function
# - The first argument to the function is the name of the command.
# - You should make sure to pass the rest of the arguments to fzf.
_fzf_comprun() {
  local command=$1
  shift

  case "$command" in
    cd) fzf --preview 'eza --tree --color=always {} | head -200' "$@" ;;
    export|unset) fzf --preview "eval 'echo \${}'"               "$@" ;;
    ssh)  fzf --preview 'dig {}'                                 "$@" ;;
    code|micro|nvim|vim|nano)
      FZF_DEFAULT_COMMAND="$RG_FZF_CMD" \
      fzf       \
      --ansi     \
      --cycle     \
      --bind "change:reload:sleep 0.1; $RG_PREFIX_STR $RG_QUERY_PARSING ." \
      --delimiter : \
      --phony --query '' \
      ${RG_PREVIEW_STR[@]+"${RG_PREVIEW_STR[@]}"} \
      --bind "enter:execute:echo {} | awk -F: '{print \$1}' | xargs -I {} $command {}" "$@" ;;
    *)  fzf --preview "$show_file_or_dir_preview"                 "$@" ;;
  esac
}

export BAT_THEME="Visual Studio Dark+"
