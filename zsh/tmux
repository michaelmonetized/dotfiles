# set -g @plugin 'tmux-plugins/tmux-battery'

set -g @resurrect-capture-pane-contents 'off'
set -g @continuum-restore 'off'

set -g status-style 'fg=color13'

set-hook -g after-new-session 'display-message "Welcome to your :p new tmux session!"'

set -g @sessionx-custom-paths "$HOME/Projects,$HOME/Library/Mobile Documents/com~apple~CloudDocs/Projects"
set -g @sessionx-custom-paths-subdirectories 'false'
set -g @sessionx-auto-accept 'off'
set -g @sessionx-zoxide-mode 'on'
set -g @sessionx-custom-paths-subdirectories 'false'
set -g @sessionx-filter-current 'false'

run '~/.tmux/plugins/tpm/tpm'

